server {
    listen      80;
    server_name  {{ inventory_hostname }};

    # Mylo Front
    location / {
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_set_header X-NginX-Proxy true;
        proxy_pass http://127.0.0.1:{{ mylo_port }}/;
        proxy_redirect off;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        proxy_redirect off;
        proxy_set_header   X-Forwarded-Proto $scheme;
    }

    # Mylo Backend
    location {{ node_route }} {
        proxy_pass http://127.0.0.1:{{ node_port }};
        rewrite {{ node_route }}/(.*) /$1 break;
    }

    # Mylo Static Assets
    location ~ ^/(assets/|images/|img/|javascript/|js/|css/|stylesheets/|flash/|media/|static/|robots.txt|humans.txt|favicon.ico) {
        root /srv/www/yourapp/public/;
        access_log off;
        expires 1y;
    }

    gzip            on;
    gzip_min_length 1000;
    gzip_comp_level 9;
    gzip_proxied    any;
    gzip_types      application/javascript application/x-javascript application/json text/css;
}
